{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": ["react", "standard", "jest"],
  "parser": "babel-eslint",
  "rules": {
    "max-len": ["warn", { "code": 120 }]
  },
  "globals": {
    "fetch": false
  }
}
